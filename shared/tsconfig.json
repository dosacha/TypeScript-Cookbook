// shared/tsconfig.json
{
    "compilerOptions": {
        "composite": true, // 다른 프로젝트가 이 프로젝트를 참조할 수 있도록 허용한다.
        "target": "ESNext",
        "module": "ESNext",
        "rootDir": "../shared",
        "moduleResolution": "node",
        "types": [],
        "declaration": true, // 다른 프로젝트가 형식 정보를 불러올 수 있도록 코드에서 d.ts 파일을 생성
        "outDir": "../dist/shared",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true
    }
}