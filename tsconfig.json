{
  "extends": "@tsconfig/strictest/tsconfig.json",
  "compilerOptions": {
    "skipLibCheck": true,
    "target": "esnext",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "verbatimModuleSyntax": true,
    "noImplicitAny": true,
    "paths": {
      "https://esm.sh/lodash@4.17.21": [
        "./node_modules/@types/lodash/index.d.ts"
      ]
    },
    "types": ["node", "mocha"],
    "rootDirs": ["test", "src"]
  },
  "exclude": ["dist", "node_modules"]
}